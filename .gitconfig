[user]
  name = Kyle Poole
  email = kyle@collectiveintellect.com
[alias]
  co = checkout
  st = status
  ci = commit
  br = branch
  pom = push origin master
  w = whatchanged
  lgd = log --graph --decorate
[color]
  diff = auto
  status = auto
  branch = auto
  ui = auto
[core]
  excludesfile = /Users/kp/.gitignore
  #editor = /Applications/Emacs.app/Contents/MacOS/bin/emacsclient
  editor = emacsclient
  autocrlf = input
[apply]
  whitespace = fix
[format]
  pretty = %C(yellow)%h%Creset%C(green)%d%Creset %s %C(red)[%an]%Creset %C(cyan)[%cr]%Creset
[rerere]
  enabled = 1
[push]
  default = tracking
[branch]
  autosetuprebase = always
#[mergetool "ediff"]
  #cmd = /Applications/Emacs.app/Contents/MacOS/bin/emacsclient --eval \"(git-mergetool-emacsclient-ediff \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" \\\"$MERGED\\\")\"
  #trustExitCode = true
#[mergetool]
  #prompt = false
[merge]
  #tool = ediff
  tool = vimdiff
[diff]
  tool = vimdiff
