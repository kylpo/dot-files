!! From Kylpo
!! changes keyboard to:
!! Capslock = Super
!! L_Command = Control
!! R_Command = Alt
!! = crazy good emacs config

remove Lock = Caps_Lock
remove Control = Control_R
remove mod4 = Super_R Super_L
remove mod1 = Meta_L

keysym Caps_Lock = Super_L
keysym Super_L = Control_R
keysym Super_R = Meta_L Meta_L
keycode 104 = Pointer_Button3

add Control = Control_R
add mod4 = Super_L
add mod1 = Meta_L








